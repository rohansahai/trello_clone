<h2> This is your Boards Nesting Place, Funky Child </h2>
<br>
<h4> Board Title: <%= board.escape('title') %> </h4>
<br>

<p> Lists </p>

<div class='row'>
  <ul>
    <% board.lists().each(function(list){ %>
      <div class="col-xs-3">
        <li> <%= list.escape('title') %>
          <ul>
            <% list.cards().each(function(card){ %>
              <li> <%= card.escape('title') %> </li>
            <% }) %>
          </ul>
        </li>
      </div>
    <% }) %>
  </ul>
</div>


<br>
<a href= <%= "#/boards/" + board.get('id') + "/new_list" %> > Create New List </a>
<br>
<a href="/">Back to Boards</a>
<br>
<button type="button" id="delete-board"> OMG DELETE THE BOARD </button>
